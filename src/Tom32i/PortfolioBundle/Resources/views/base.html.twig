<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>

        {% block head_meta %}
        <meta charset="utf-8">
        <!-- meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" -->
        <title>{% block head_title %}{% endblock %}</title>
        <meta name="description" content="{% block head_meta_description %}{% endblock %}">
        <meta name="keywords" content="{% block head_meta_keywords %}{% endblock %}">
        <meta name="viewport" content="width=device-width">
        <meta name="apple-mobile-web-app-capable" content="yes" />
        {% endblock head_meta %}

        <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,700' rel='stylesheet' type='text/css'>

        {% block stylesheets %}
        {% stylesheets '@Tom32iPortfolioBundle/Resources/public/css/main.css'
            output='css/main.css' 
            filter='?yui_css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock stylesheets %}

        {% block head_js %}
        {% javascripts '@Tom32iPortfolioBundle/Resources/public/js/vendor/modernizr-2.6.2.min.js' 
            output='js/modernizr.js' 
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock head_js %}

        
        {#% block safari_mobile_meta %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon" href="touch-icon-iphone.png" />
        <link rel="apple-touch-icon" sizes="72x72" href="touch-icon-ipad.png" />
        <link rel="apple-touch-icon" sizes="114x114" href="touch-icon-retina.png" />
        <link rel="apple-touch-startup-image" href="{{ asset('startup.png') }}">
        {% endblock safari_mobile_meta %#}
    </head>
    <body class="{% block body_class %}{% endblock %}" {% block body_attributes %}{% endblock %}>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
        <![endif]-->

        {% block body_container %}
        {% endblock body_container %}

        {#}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        {% javascripts '@Tom32iPortfolioBundle/Resources/public/js/vendor/jquery-1.8.2.min.js' 
            output='js/jquery.js' 
            filter='?yui_js'
        %}
        <script>window.jQuery || document.write('<script src="{{ asset_url }}"><\/script>')</script>
        {% endjavascripts %}
        {#}

        {% block body_js %}
        {% javascripts 
            '@Tom32iPortfolioBundle/Resources/public/js/plugins.js' 
            '@Tom32iPortfolioBundle/Resources/public/js/Slider.js' 
            '@Tom32iPortfolioBundle/Resources/public/js/main.js' 
            output='js/main.js' 
            filter='?yui_js'
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock body_js %}

        {% block body_js_analytics %}
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', '{{ analytics_account }}']);
          _gaq.push(['_setDomainName', '{{ analytics_domain }}']);
          _gaq.push(['_setAllowLinker', true]);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>
        {% endblock body_js_analytics %}
    </body>
</html>
